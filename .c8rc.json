{
  "all": true,
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/coverage/**",
    "**/artifacts/**",
    "**/cache/**",
    "**/typechain/**",
    "**/contracts/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/test/**",
    "**/scripts/test/**",
    "**/scripts/dev/test-all.ts",
    "**/scripts/dev/coverage.ts"
  ],
  "reporter": [
    "html",
    "text",
    "lcov",
    "json-summary"
  ],
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}

